<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="552px">

        <android.support.v4.view.ViewPager
            android:id="@+id/header_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="84px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dic_1"
                android:layout_width="22px"
                android:layout_height="22px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_jx_circle_c"/>

            <ImageView
                android:id="@+id/dic_2"
                android:layout_marginLeft="10px"
                android:layout_width="22px"
                android:layout_height="22px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_jx_circle_c"/>

            <ImageView
                android:id="@+id/dic_3"
                android:layout_marginLeft="10px"
                android:layout_width="22px"
                android:layout_height="22px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_jx_circle_c"/>

            <ImageView
                android:id="@+id/dic_4"
                android:layout_marginLeft="10px"
                android:layout_width="22px"
                android:layout_height="22px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_jx_circle_c"/>

            <ImageView
                android:id="@+id/dic_5"
                android:layout_marginLeft="10px"
                android:layout_width="22px"
                android:layout_height="22px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_jx_circle_c"/>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginTop="42px"
        android:layout_marginBottom="42px"
        android:background="@color/colorWhite"
        android:weightSum="2">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="42px"
                android:layout_height="54px"
                android:layout_gravity="center"
                android:layout_marginLeft="70px"
                android:adjustViewBounds="true"
                android:src="@drawable/professional_hot_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30px"
                android:text="#一句情歌表白主子#"
                android:textColor="#323232"
                android:textSize="47px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="42px"
                android:layout_height="54px"
                android:layout_gravity="center"
                android:layout_marginLeft="70px"
                android:adjustViewBounds="true"
                android:src="@drawable/professional_recommand_review_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30px"
                android:text="#携宠出游该托运吗#"
                android:textColor="#323232"
                android:textSize="47px"/>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
